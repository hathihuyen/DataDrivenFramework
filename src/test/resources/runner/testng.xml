<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Data Driven Basics">
    <!-- for reportNG-->
    <listeners>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
        <listener class-name="com.hha.listeners.CustomListeners"/>
    </listeners>
    <test name="Bank Manager Login Test">
        <classes>
            <class name="com.hha.testcases.BankManagerLoginTest">
                <methods>
                    <include name="bankManagerLoginTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Add Customer Test">
        <classes>
            <class name="com.hha.testcases.AddCustomerTest">
                <methods>
                    <include name="addCustomerTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Open Account Test">
        <classes>
            <class name="com.hha.testcases.OpenAccountTest">
                <methods>
                    <include name="openAccountTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>